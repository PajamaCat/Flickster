<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/item_movie_top_padding"
    android:paddingBottom="@dimen/item_movie_bottom_padding">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="@dimen/item_movie_image_right_padding"
        android:id="@+id/movieImage"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_toEndOf="@+id/movieImage"
        style="@style/MovieItemTitleText"
        android:id="@+id/movieTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/movieTitle"
        android:layout_toRightOf="@+id/movieImage"
        android:layout_toEndOf="@+id/movieImage"
        style="@style/MovieItemOverviewText"
        android:id="@+id/movieOverview" />

</RelativeLayout>